{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-product" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class=""></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-product" class="form-horizontal">
    
            <div class="tab-pane ">   
                    
                     
                        <input type="hidden" name="start_date" value="{{ start_date }}" placeholder="{{ entry_start_date }}" id="input-start_date" class="form-control"/>
                        

                     <div class="form-group required">
                      <label class="col-sm-2 control-label" for="input-last_date">{{ entry_last_date}}</label>
                      <div class="col-sm-2">
                        <input type="date" name="last_date" value="{{ last_date }}" placeholder="{{ entry_last_date }}" id="input-last_date" class="form-control"/>
                        {% if error_last_date %}
                          <div class="text-danger">{{ error_last_date }}</div>
                        {% endif %} </div>
                    </div>

                        <input type="hidden" name="start_reading" value="{{ start_reading  }}" placeholder="{{ entry_start_reading }}" id="input-start_reading " class="form-control"/>
                   

                     <div class="form-group required">
                      <label class="col-sm-2 control-label" for="input-last_reading ">{{ entry_last_reading }}</label>
                      <div class="col-sm-2">
                        <input type="text" name="last_reading" value="{{ last_reading  }}" placeholder="{{ entry_last_reading }}" id="input-last_reading " class="form-control"/>
                        {% if error_last_reading %}
                          <div class="text-danger">{{ error_last_reading }}</div>
                        {% endif %} </div>
                    </div>

                    <div class="form-group required">
                      <label class="col-sm-2 control-label" for="input-remark ">{{ entry_remark }}</label>
                      <div class="col-sm-4">
                        <input type="text" name="remark" value="{{ remark  }}" placeholder="{{ entry_remark }}" id="input-remark " class="form-control"/>
                        {% if error_remark %}
                          <div class="text-danger">{{ error_remark }}</div>
                        {% endif %} </div>
                    </div>



                  </div>
        
            </div>
        </form>
      </div>
    </div>
  </div>



  