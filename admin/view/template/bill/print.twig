{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ invoice }}" target="_blank" data-toggle="tooltip" title="{{ button_invoice_print }}" class="btn btn-info"><i class="fa fa-print"></i></a> <a href="{{ shipping }}" target="_blank" data-toggle="tooltip" title="{{ button_shipping_print }}" class="btn btn-info"><i class="fa fa-truck"></i></a> <a href="{{ edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a> <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
     
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-user"></i> {{ text_payingguest_detail }}</h3>
          </div>
          <table class="table">
          <tr>
              <td><button data-toggle="tooltip" title="{{ text_customer_group }}" class="btn btn-info btn-xs"><i class="fa fa-group fa-fw"></i></button></td>
               <td>{{ column_room_number }}</td>
              <td>{{ room_number }}</td>
            </tr>
            <tr>
              <td style="width: 1%;"><button data-toggle="tooltip" title="{{ text_customer }}" class="btn btn-info btn-xs"><i class="fa fa-user fa-fw"></i></button></td>
               <td>{{ column_name }}</td>
              <td>{{ first_name }} {{ last_name }}</td>
            </tr> 
          </table>
        </div>
      </div>

    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"> {{ text_bill }}</h3>
      </div>
      <div class="panel-body">
       
        <table class="table table-bordered">
          <thead>
            <tr>
              <td class="text-left">{{ column_start_date }}</td>
              <td class="text-left">{{ column_last_date }}</td>
              <td class="text-left">{{ column_start_reading }}</td>
              <td class="text-left">{{ column_last_reading }}</td>
              <td class="text-left">{{ column_total_reading}}</td>
              <td class="text-left">{{ column_total_bill }}</td>
              <td class="text-left">{{ column_remark}}</td>
            </tr>
          </thead>
          <tbody>

              <tr>
                 <td class="text-left">{{ start_date }}</td>
                <td class="text-left">{{ last_date }}</td>
                <td class="text-left">{{ start_reading }}</td>
                <td class="text-left">{{ last_reading }}</td>
                <td class="text-left">{{ total_reading }}</td>
                <td class="text-left">{{ total_bill }}</td>
                 <td class="text-left">{{ remark }}</td>
              </tr>

          </tbody>
        </table>

     </div>
    </div>

    
  </div>
</div>
{{ footer }} 