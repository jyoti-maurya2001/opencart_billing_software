		  $('.time').datetimepicker({
			  language: '{{ datepicker }}',
			  pickDate: false
		  });

		  $('.datetime').datetimepicker({
			  language: '{{ datepicker }}',
			  pickDate: true,
			  pickTime: true
		  });

		  option_row++;
	  }
  });
