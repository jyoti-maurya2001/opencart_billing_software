{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="button" data-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-product').toggleClass('hidden-sm hidden-xs');" class="btn btn-default hidden-md hidden-lg"><i class="fa fa-filter"></i></button>
          <a href="{{ generatebill }}" data-toggle="tooltip" title="{{ button_generatebill}}" class="btn btn-success"><i class="fa fa-user"></i></a>
          <a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>


        <button type="button" form="form-product" formaction="{{ delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-product').submit() : false;"><i class="fa fa-trash-o"></i></button>
        <input type="hidden" name="room_number" value="{{ room_number}}"  id="input-bill_id" class="form-control" />

      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">{% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="row">
      <div id="filter-product" class="col-md-3 col-md-push-9 col-sm-12 hidden-sm hidden-xs">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-filter"></i> {{ text_filter }}</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="control-label" for="input-start_date">{{ entry_start_date }}</label>
              <input type="text" name="filter_start_date" value="{{ filter_start_date }}" placeholder="{{ entry_start_date }}" id="input-start_date" class="form-control" />
            </div>
            <div class="form-group">
              <label class="control-label" for="input-last_date">{{ entry_last_date }}</label>
              <input type="text" name="filter_last_date" value="{{ filter_last_date}}" placeholder="{{ entry_last_date}}" id="input-last_date" class="form-control" />
            </div>
            <div class="form-group">
              <label class="control-label" for="input-start_reading">{{ entry_start_reading }}</label>
              <input type="text" name="filter_start_reading" value="{{ filter_start_reading }}" placeholder="{{ entry_start_reading }}" id="input-start_reading" class="form-control" />
            </div>
            <div class="form-group">
              <label class="control-label" for="input-last_reading">{{ entry_last_reading }}</label>
              <input type="text" name="filter_last_reading" value="{{ filter_last_reading }}" placeholder="{{ entry_last_reading}}" id="input-last_reading" class="form-control" />
            </div>
            <div class="form-group">
              <label class="control-label" for="input-total_reading">{{ entry_total_reading }}</label>
              <input type="text" name="filter_total_reading" value="{{ filter_total_reading }}" placeholder="{{ entry_total_reading}}" id="input-total_reading" class="form-control" />
            </div>
            <div class="form-group">
              <label class="control-label" for="input-total_bill">{{ entry_total_bill }}</label>
              <input type="text" name="filter_total_bill" value="{{ filter_total_bill }}" placeholder="{{ entry_total_bill}}" id="input-total_bill" class="form-control" />
            </div>
           
            <div class="form-group text-right">
              <button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ button_filter }}</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-9 col-md-pull-3 col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
          </div>
          <div class="panel-body">
            <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-product">
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                      
                      <td class="text-left">{% if sort == 'start_date' %} <a href="{{ sort_start_date}}" class="{{ order|lower }}">{{ column_start_date }}</a> {% else %} <a href="{{ sort_start_date }}">{{ column_start_date }}</a> {% endif %}</td>
                      <td class="text-left">{% if sort == 'last_date' %} <a href="{{ sort_last_date }}" class="{{ order|lower }}">{{ column_last_date}}</a> {% else %} <a href="{{ sort_last_date }}">{{ column_last_date }}</a> {% endif %}</td>
                      <td class="text-left">{% if sort == 'start_reading' %} <a href="{{ sort_start_reading}}" class="{{ order|lower }}">{{ column_start_reading }}</a> {% else %} <a href="{{ sort_start_reading }}">{{ column_start_reading }}</a> {% endif %}</td>
                      <td class="text-left">{% if sort == 'last_reading' %} <a href="{{ sort_last_reading }}" class="{{ order|lower }}">{{ column_last_reading }}</a> {% else %} <a href="{{ sort_last_reading }}">{{ column_last_reading }}</a> {% endif %}</td>
                      <td class="text-left">{% if sort == 'total_reading' %} <a href="{{ sort_total_reading }}" class="{{ order|lower }}">{{ column_total_reading }}</a> {% else %} <a href="{{ sort_total_reading }}">{{ column_total_reading }}</a> {% endif %}</td>
                      <td class="text-left">{% if sort == 'total_bill' %} <a href="{{ sort_total_bill }}" class="{{ order|lower }}">{{ column_total_bill }}</a> {% else %} <a href="{{ sort_total_bill }}">{{ column_total_bill }}</a> {% endif %}</td>
                      <td class="text-left">{% if sort == 'remark' %} <a href="{{ sort_remark }}" class="{{ order|lower }}">{{ column_remark }}</a> {% else %} <a href="{{ sort_remark }}">{{ column_remark }}</a> {% endif %}</td>

                      <td class="text-right">{{ column_action }}</td>
                    </tr>
                  </thead>
                  <tbody>
                  
                  {% if bills %}
                  {% for bill in bills %}
                  <tr>
                    <td class="text-center">{% if bill.bill_id in selected %}
                      <input type="checkbox" name="selected[]" value="{{ bill.bill_id }}" checked="checked" />
                      {% else %}
                      <input type="checkbox" name="selected[]" value="{{ bill.bill_id }}" />
                      {% endif %}</td>
                    <td class="text-left">{{ bill.start_date }}</td>
                    <td class="text-left">{{ bill.last_date }}</td>
                    <td class="text-left">{{ bill.start_reading}}</td>
                    <td class="text-left">{{ bill.last_reading }}</td>
                    <td class="text-left">{{ bill.total_reading }}</td>
                    <td class="text-left">{{ bill.total_bill }}</td>
                     <td class="text-left">{{ bill.remark }}</td>
                    <td class="text-left">
                    <a href="{{ bill.editbill }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                    <a href="{{ bill.deletesinglebill }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    <a href="{{ bill.print }}" data-toggle="tooltip" title="{{ button_print }}" class="btn btn-warning"><i class="fa  fa-print"></i></a>
                  </td>
                  </tr>
                  {% endfor %}
                  {% else %}
                  <tr>
                    <td class="text-center" colspan="8">{{ text_no_results }}</td>
                  </tr>
                  {% endif %}
                    </tbody>
                  
                </table>
              </div>
            </form>
            <div class="row">
              <div class="col-sm-6 text-left">{{ pagination }}</div>
              <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript"><!--
$('#button-filter').on('click', function() {
	var url = '';

  var get_room_number = $('input[name=\'room_number\']').val();

	if (get_room_number) {
		url += '&room_number=' + encodeURIComponent(get_room_number);
	}

	var filter_start_date = $('input[name=\'filter_start_date\']').val();

	if (filter_start_date) {
		url += '&filter_start_date=' + encodeURIComponent(filter_start_date);
	}

	var filter_last_date = $('input[name=\'filter_last_date\']').val();

	if (filter_last_date) {
		url += '&filter_last_date=' + encodeURIComponent(filter_last_date);
	}

	var filter_start_reading = $('input[name=\'filter_start_reading\']').val();

	if (filter_start_reading) {
		url += '&filter_start_reading=' + encodeURIComponent(filter_start_reading);
	}

	var filter_last_reading = $('input[name=\'filter_last_reading\']').val();

	if (filter_last_reading) {
		url += '&filter_last_reading=' + encodeURIComponent(filter_last_reading);
	}
  
	var filter_total_reading = $('input[name=\'filter_total_reading\']').val();

	if (filter_total_reading) {
		url += '&filter_total_reading=' + encodeURIComponent(filter_total_reading);
	}

  var filter_total_bill = $('input[name=\'filter_total_bill\']').val();

	if (filter_total_bill) {
		url += '&filter_total_bill=' + encodeURIComponent(filter_total_bill);
	}

	location = 'index.php?route=bill/bill&user_token={{ user_token }}' + url;
});
//--></script> 
  <script type="text/javascript"><!--
// IE and Edge fix!
$('button[form=\'form-product\']').on('click', function(e) {
	$('#form-product').attr('action', $(this).attr('formaction'));
});
  
$('input[name=\'filter_name\']').autocomplete({
	'source': function(request, response) {
		$.ajax({
			url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				response($.map(json, function(item) {
					return {
						label: item['name'],
						value: item['product_id']
					}
				}));
			}
		});
	},
	'select': function(item) {
		$('input[name=\'filter_name\']').val(item['label']);
	}
});

$('input[name=\'filter_model\']').autocomplete({
	'source': function(request, response) {
		$.ajax({
			url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_model=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				response($.map(json, function(item) {
					return {
						label: item['model'],
						value: item['product_id']
					}
				}));
			}
		});
	},
	'select': function(item) {
		$('input[name=\'filter_model\']').val(item['label']);
	}
});
//--></script></div>
